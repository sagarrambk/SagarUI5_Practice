<mvc:View controllerName="home.controller.dscreen"
xmlns = "sap.m"
xmlns:mvc = "sap.ui.core.mvc"
xmlns:core = "sap.ui.core"
xmlns:form = "sap.ui.layout.form"
xmlns:table = "sap.ui.table">

<form:SimpleForm editable="true" id="idSimpleForm">
<core:Title text="Student details" icon="sap-icon://study-leave"></core:Title>  

   <Label text="Student Name"></Label>
   
   <Input id='idSName' placeholder="Student Name" width="50%" value="{stName}"></Input>


   <Label text="Student Class"></Label>
   
   <Input id='idStC' placeholder="Student Class" width="50%" value="{stClass}"></Input> 

   <Label text="Student Result"></Label>
   
   <Input id='idStR' placeholder="Result" width="50%" value="{stResult}"></Input> 

   <Label text="Student Grade"></Label>

   <Input id='idStG' placeholder="Grade" width="50%" value="{stGrade}"></Input> 

   <Label text="Student Gender"></Label>

<Input id='idstGe' placeholder="Gender" width="50%" value="{gender}"></Input> 


</form:SimpleForm>
</mvc:View>