<mvc:View controllerName = "home.controller.jsonmodel"
xmlns = "sap.m"
xmlns:mvc = "sap.ui.core.mvc"
xmlns:core = "sap.ui.core"
xmlns:form = "sap.ui.layout.form">

<form:SimpleForm editable = "true"> 
<Label text="Name"></Label>
<Input id="idEname" width="30%" value="{/Person/Name}"></Input>

<Label text="ID"></Label>
<Input id="idEid" width="30%" value="{/Person/Id}"></Input>

<Label text="City"></Label>
<Input id="idESkil" width="30%" value="{/Person/City}"></Input>

<Label text="Pin"></Label>
<Input id="idELoc" width="30%" value="{/Person/Pin}"></Input>

<Label text="Contact"></Label>
<Input id="idESal" width="30%" value="{/Person/Contact}"></Input>
</form:SimpleForm>
</mvc:View>

