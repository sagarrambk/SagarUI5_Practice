<mvc:View controllerName = "home.controller.student"
xmlns = "sap.m"
xmlns:mvc = "sap.ui.core.mvc"
xmlns:form = "sap.ui.layout.form">

<form:SimpleForm editable = "true">
<Label text="Student Name"></Label>
<Input id="StName" width="30%" value="{/Student/StName}" editable = "{/Student/edit}" ></Input>

<Label text="Student Class"></Label>
<Input id="StClass" width="30%" value="{/Student/StClass}" editable = "{/Student/edit}"></Input>

<Label text="Student ID"></Label>
<Input id="StId" width="30%" value="{/Student/StId}" editable = "{/Student/edit}"></Input>

<Label text="Student Village"></Label>
<Input id="StVillage" width="30%" value="{/Student/StVillage}" editable = "{/Student/edit}"></Input>

<Label text="Student Contact"></Label>
<Input id="StContact" width="30%" value="{/Student/StContact}" editable = "{/Student/edit}"></Input>

<Label text="School Name"></Label>
<Input id="ScName" width="30%" value="{school>/School/ScName}" editable = "{school>/School/edit}" ></Input>

<Label text="School City"></Label>
<Input id="ScCity" width="30%" value="{school>/School/ScCity}" editable = "{school>/School/edit}"></Input>

<Label text="School Branch"></Label>
<Input id="ScBranch" width="30%" value="{school>/School/ScBranch}" editable = "{school>/School/edit}"></Input>

<Label text="School Pin"></Label>
<Input id="ScPin" width="30%" value="{school>/School/ScPin}" editable = "{school>/School/edit}"></Input>

<Label text="School Contact"></Label>
<Input id="ScContact" width="30%" value="{school>/School/ScContact}" editable = "{school>/School/edit}"></Input>
</form:SimpleForm>
</mvc:View>

