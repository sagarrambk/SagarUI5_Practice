<mvc:View controllerName = "home.controller.login"
xmlns = "sap.m"
xmlns:mvc = "sap.ui.core.mvc"
xmlns:core = "sap.ui.core"
xmlns:form = "sap.ui.layout.form"
xmlns:table = "sap.ui.table">


<form:SimpleForm editable="true">
<core:Title text="Student details" icon="sap-icon://study-leave"></core:Title>  

   <Label text="User Name"></Label>
   <!-- 1st type of property binding -->
   <Input id='idUName' placeholder="User Name" width="50%"  ></Input> 


   <Label text="Password"></Label>
   <!-- 1st type of property binding -->
   <Input id='idPass' placeholder="Password" width="50%" ></Input> 

   </form:SimpleForm>
   			<HBox>
				<Button text="Register"
                        type = "Accept"
						press="onRegister"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
				<Button text="Submit"
						press="onSubmit"
						ariaDescribedBy="acceptButtonDescription genericButtonDescription">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
            </HBox>
</mvc:View>